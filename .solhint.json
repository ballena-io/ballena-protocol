{
  "extends": ["solhint:recommended"],
  "rules": {
    "prettier/prettier": "error",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "max-states-count": ["warn", 18],
    "compiler-version": ["error", "^0.8.0"]
  },
  "plugins": ["prettier"]
}
