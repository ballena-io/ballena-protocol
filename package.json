{
  "name": "ballena-protocol",
  "version": "1.0.0-beta.01",
  "description": "ballena.io protocol",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage",
    "typechain": "npx hardhat typechain",
    "prettier:check": "npx prettier --check --loglevel error '{contracts,scripts,types,test}/**/*.{ts,sol}'",
    "prettier": "npx prettier --write '{contracts,scripts,types,test}/**/*.{ts,sol}'",
    "lint:sol": "npx solhint -f table contracts/**/*.sol",
    "lint:ts": "npx eslint . -f table --ext .ts",
    "lint": "yarn lint:sol && yarn lint:ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ballena-io/ballena-protocol.git"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [],
  "author": "ballena.io",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ballena-io/ballena-protocol/issues"
  },
  "homepage": "https://github.com/ballena-io/ballena-protocol#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^6.0.5",
    "@typechain/hardhat": "^1.0.1",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "chai": "^4.3.4",
    "decimal.js": "^10.2.1",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-mocha": "^8.1.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.32",
    "hardhat": "^2.1.2",
    "husky": "^6.0.0",
    "mocha": "^8.3.2",
    "mocha-chai-jest-snapshot": "^1.1.1",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.6",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.0.0"
  }
}
